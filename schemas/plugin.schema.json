{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/untrustedmodders/plugify/main/schemas/plugin.schema.json",
  "type": "object",
  "required": [
    "fileVersion",
    "version",
    "friendlyName",
    "entryPoint",
    "languageModule"
  ],
  "properties": {
    "fileVersion": {
      "type": "number",
      "title": "The version number of the configuration file format.",
      "minimum": 1
    },
    "version": {
      "type": "string",
      "title": "The semantic version of the plugin.",
      "pattern": "^(?P<major>0|[1-9]\\d*)\\.(?P<minor>0|[1-9]\\d*)\\.(?P<patch>0|[1-9]\\d*)(?:-(?P<prerelease>(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+(?P<buildmetadata>[0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "minLength": 1
    },
    "friendlyName": {
      "type": "string",
      "title": "A user-friendly name for the plugin.",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "title": " A brief description or overview of the plugin."
    },
    "createdBy": {
      "type": "string",
      "title": "The creator or author of the plugin."
    },
    "createdByURL": {
      "type": "string",
      "title": "The URL linking to the creator's profile or information.",
      "pattern": "https?://(www\\.)?[-a-zA-Z0-9@:%._+~#=]{2,256}\\.[a-z]{2,4}\\b([-a-zA-Z0-9@:%_+.~#?&/=]*)"
    },
    "docsURL": {
      "type": "string",
      "title": "The URL linking to the documentation for the plugin.",
      "pattern": "https?://(www\\.)?[-a-zA-Z0-9@:%._+~#=]{2,256}\\.[a-z]{2,4}\\b([-a-zA-Z0-9@:%_+.~#?&/=]*)"
    },
    "downloadURL": {
      "type": "string",
      "title": "The URL for downloading the plugin, typically a release package or ZIP file.",
      "pattern": "https?://(www\\.)?[-a-zA-Z0-9@:%._+~#=]{2,256}\\.[a-z]{2,4}\\b([-a-zA-Z0-9@:%_+.~#?&/=]*)"
    },
    "updateURL": {
      "type": "string",
      "title": "The URL for checking and fetching updates for the plugin.",
      "pattern": "https?://(www\\.)?[-a-zA-Z0-9@:%._+~#=]{2,256}\\.[a-z]{2,4}\\b([-a-zA-Z0-9@:%_+.~#?&/=]*)"
    },
    "entryPoint": {
      "type": "string",
      "title": "The entry point or main executable for the plugin.",
      "minLength": 1
    },
    "supportedPlatforms": {
      "type": "array",
      "title": "An array listing the platforms supported by the plugin.",
      "items": {
        "type": "string",
        "title": "Platform name.",
        "enum": ["windows", "linux", "apple", "bsd", "orbis", "prospero", "switch"]
      }
    },
    "resourceDirectories": {
      "type": "array",
      "title": "Specifies additional directories where the plugin can search for resources.",
      "items": {
        "type": "string",
        "title": "Relative folder path.",
        "minLength": 1
      }
    },
    "languageModule": {
      "type": "object",
      "title": "Information about the programming language module used.",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "title": "Language name.",
          "pattern": "^(?!plugin$).*",
          "minLength": 1,
          "examples": [
            "cpp",
            "csharp",
            "python",
            "javascript"
          ]
        }
      }
    },
    "dependencies": {
      "type": "array",
      "title": "A list of plugin references specifying the dependencies required for the plugin.",
      "items": {
        "type": "object",
        "title": "Describes the properties of a plugin dependency.",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "The name of the plugin reference.",
            "minLength": 1
          },
          "optional": {
            "type": "boolean",
            "title": "Indicates whether the plugin reference is optional."
          },
          "supportedPlatforms": {
            "type": "array",
            "title": "The platforms supported by the plugin reference.",
            "items": {
              "type": "string",
              "title": "Platform name.",
              "enum": ["windows", "linux", "apple", "bsd", "orbis", "prospero", "switch"]
            }
          },
          "requestedVersion": {
            "type": "string",
            "title": "Optional requested version of the plugin reference.",
            "minimum": 0,
            "pattern": "^(?P<major>0|[1-9]\\d*)\\.(?P<minor>0|[1-9]\\d*)\\.(?P<patch>0|[1-9]\\d*)(?:-(?P<prerelease>(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+(?P<buildmetadata>[0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
            "minLength": 1
          }
        }
      }
    },
    "exportedMethods": {
      "type": "array",
      "title": "An array describing functions/methods exposed by the plugin.",
      "items": {
        "type": "object",
        "title": "An object describing single function/method exposed by the plugin.",
        "required": [
          "name",
          "funcName",
          "paramTypes",
          "retType"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "Function name to export to the other plugins.",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
            "minLength": 1
          },
          "group": {
            "type": "string",
            "title": "Function's group for documentation."
          },
          "description": {
            "type": "string",
            "title": "Function's description for documentation."
          },
          "funcName": {
            "type": "string",
            "title": "Internal function name in plugin's assembly.",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
            "minLength": 1
          },
          "paramTypes": {
            "type": "array",
            "title": "Parameters list.",
            "items": {
              "type": "object",
              "title": "Parameter's information.",
              "required": [
                "name",
                "type"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "title": "Parameter's type.",
                  "enum": ["void", "bool", "char8", "char16", "int8", "int16", "int32", "int64", "uint8", "uint16", "uint32", "uint64", "ptr64", "ptr32", "float", "double", "function", "string", "any", "bool[]", "char8[]", "char16[]", "int8[]", "int16[]", "int32[]", "int64[]", "uint8[]", "uint16[]", "uint32[]", "uint64[]", "ptr64[]", "float[]", "double[]", "string[]", "any[]", "vec2[]", "vec3[]", "vec4[]", "mat4x4[]", "vec2", "vec3", "vec4", "mat4x4"]
                },
                "name": {
                  "type": "string",
                  "title": "Parameter's name for generator.",
                  "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                  "minLength": 1
                },
                "description": {
                  "type": "string",
                  "title": "Parameter's description for documentation."
                },
                "prototype": {
                  "type": "object",
                  "title": "An object describing function prototype.",
                  "required": [
                    "name",
                    "paramTypes",
                    "retType"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "Function's name.",
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                      "minLength": 1
                    },
                    "description": {
                      "type": "string",
                      "title": "Function's description for documentation."
                    },
                    "paramTypes": {
                      "type": "array",
                      "title": "Parameters list.",
                      "items": {
                        "type": "object",
                        "title": "Parameter's information.",
                        "required": [
                          "name",
                          "type"
                        ],
                        "properties": {
                          "type": {
                            "type": "string",
                            "title": "Parameter's type.",
                            "enum": ["void", "bool", "char8", "char16", "int8", "int16", "int32", "int64", "uint8", "uint16", "uint32", "uint64", "ptr64", "ptr32", "float", "double", "function", "string", "any", "bool[]", "char8[]", "char16[]", "int8[]", "int16[]", "int32[]", "int64[]", "uint8[]", "uint16[]", "uint32[]", "uint64[]", "ptr64[]", "float[]", "double[]", "string[]", "any[]", "vec2[]", "vec3[]", "vec4[]", "mat4x4[]", "vec2", "vec3", "vec4", "mat4x4"]
                          },
                          "name": {
                            "type": "string",
                            "title": "Parameter's name.",
                            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                            "minLength": 1
                          },
                          "description": {
                            "type": "string",
                            "title": "Parameter's description for documentation."
                          }
                        }
                      }
                    },
                    "retType": {
                      "type": "object",
                      "title": "Return's information.",
                      "required": [
                        "type"
                      ],
                      "properties": {
                        "type": {
                          "type": "string",
                          "title": "Return's type.",
                          "enum": ["void", "bool", "char8", "char16", "int8", "int16", "int32", "int64", "uint8", "uint16", "uint32", "uint64", "ptr64", "ptr32", "float", "double", "function", "string", "any", "bool[]", "char8[]", "char16[]", "int8[]", "int16[]", "int32[]", "int64[]", "uint8[]", "uint16[]", "uint32[]", "uint64[]", "ptr64[]", "float[]", "double[]", "string[]", "any[]", "vec2[]", "vec3[]", "vec4[]", "mat4x4[]", "vec2", "vec3", "vec4", "mat4x4"]
                        },
                        "name": {
                          "type": "string",
                          "title": "Return's name.",
                          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                          "minLength": 1
                        }
                      }
                    }
                  }
                },
                "enum": {
                  "type": "object",
                  "title": "An object describing enum structure.",
                  "required": [
                    "name",
                    "values"
                  ],
                  "properties": {
                    "name": {
                      "type": "string",
                      "title": "Enum's name.",
                      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                      "minLength": 1
                    },
                    "description": {
                      "type": "string",
                      "title": "Enum's description for documentation."
                    },
                    "values": {
                      "type": "array",
                      "title": "Enum's entries.",
                      "items": {
                        "type": "object",
                        "title": "Value's information.",
                        "required": [
                          "name",
                          "value"
                        ],
                        "properties": {
                          "name": {
                            "type": "string",
                            "title": "Enum's value name.",
                            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                            "minLength": 1
                          },
                          "description": {
                            "type": "string",
                            "title": "Enum's value description for documentation."
                          },
                          "value": {
                            "type": "integer",
                            "title": "An integer representing the value of the enum element."
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "retType": {
            "type": "object",
            "title": "Return's information.",
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "type": "string",
                "title": "Return's type.",
                "enum": ["void", "bool", "char8", "char16", "int8", "int16", "int32", "int64", "uint8", "uint16", "uint32", "uint64", "ptr64", "ptr32", "float", "double", "function", "string", "any", "bool[]", "char8[]", "char16[]", "int8[]", "int16[]", "int32[]", "int64[]", "uint8[]", "uint16[]", "uint32[]", "uint64[]", "ptr64[]", "float[]", "double[]", "string[]", "any[]", "vec2[]", "vec3[]", "vec4[]", "mat4x4[]", "vec2", "vec3", "vec4", "mat4x4"]
              },
              "name": {
                "type": "string",
                "title": "Return's name for generator.",
                "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "title": "Return's description for documentation."
              },
              "prototype": {
                "type": "object",
                "title": "An object describing function prototype.",
                "required": [
                  "name",
                  "paramTypes",
                  "retType"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "title": "Function's name.",
                    "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                    "minLength": 1
                  },
                  "description": {
                    "type": "string",
                    "title": "Function's description for documentation."
                  },
                  "paramTypes": {
                    "type": "array",
                    "title": "Parameters list.",
                    "items": {
                      "type": "object",
                      "title": "Parameter's information.",
                      "required": [
                        "name",
                        "type"
                      ],
                      "properties": {
                        "type": {
                          "type": "string",
                          "title": "Parameter's type.",
                          "enum": ["void", "bool", "char8", "char16", "int8", "int16", "int32", "int64", "uint8", "uint16", "uint32", "uint64", "ptr64", "ptr32", "float", "double", "function", "string", "any", "bool[]", "char8[]", "char16[]", "int8[]", "int16[]", "int32[]", "int64[]", "uint8[]", "uint16[]", "uint32[]", "uint64[]", "ptr64[]", "float[]", "double[]", "string[]", "any[]", "vec2[]", "vec3[]", "vec4[]", "mat4x4[]", "vec2", "vec3", "vec4", "mat4x4"]
                        },
                        "name": {
                          "type": "string",
                          "title": "Parameter's name.",
                          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                          "minLength": 1
                        },
                        "description": {
                          "type": "string",
                          "title": "Parameter's description for documentation."
                        }
                      }
                    }
                  },
                  "retType": {
                    "type": "object",
                    "title": "Return's information.",
                    "required": [
                      "type"
                    ],
                    "properties": {
                      "type": {
                        "type": "string",
                        "title": "Return's type.",
                        "enum": ["void", "bool", "char8", "char16", "int8", "int16", "int32", "int64", "uint8", "uint16", "uint32", "uint64", "ptr64", "ptr32", "float", "double", "function", "string", "any", "bool[]", "char8[]", "char16[]", "int8[]", "int16[]", "int32[]", "int64[]", "uint8[]", "uint16[]", "uint32[]", "uint64[]", "ptr64[]", "float[]", "double[]", "string[]", "any[]", "vec2[]", "vec3[]", "vec4[]", "mat4x4[]", "vec2", "vec3", "vec4", "mat4x4"]
                      },
                      "name": {
                        "type": "string",
                        "title": "Return's name.",
                        "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                        "minLength": 1
                      }
                    }
                  }
                }
              },
              "enum": {
                "type": "object",
                "title": "An object describing enum structure.",
                "required": [
                  "name",
                  "values"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "title": "Enum's name.",
                    "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                    "minLength": 1
                  },
                  "description": {
                    "type": "string",
                    "title": "Enum's description for documentation."
                  },
                  "values": {
                    "type": "array",
                    "title": "Enu's entries.",
                    "items": {
                      "type": "object",
                      "title": "Value's information.",
                      "required": [
                        "name",
                        "value"
                      ],
                      "properties": {
                        "name": {
                          "type": "string",
                          "title": "Enum's value name.",
                          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
                          "minLength": 1
                        },
                        "description": {
                          "type": "string",
                          "title": "Enum's value description for documentation."
                        },
                        "value": {
                          "type": "integer",
                          "title": "An integer representing the value of the enum element."
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}